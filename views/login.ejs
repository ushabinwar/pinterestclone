<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 bg-center bg-cover bg-[url] flex items-center justify-center ">
    <div class="w-[26vw] h-[] bg-white px-12 py-4 rounded-[30px]">
      <img class="h-[10vh] m-auto " src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"  />
      <div class="text-3xl text-center font-semibold text-zinc-800 tracking-tighter leading-none capitalize">Welcome to pintrest</div>
      <form action="/login" method="post">
        <input class=" border-2 rounded-[10px] block mt-4 w-full px-3 py-3" type="text" name="username" placeholder="username">
        <input class=" border-2 rounded-[10px] block mt-3 w-full px-3 py-3" type="password" name="password" placeholder="password">
        <!-- <input class=" block mt-2 w-full px-3 py-3" type="text" name="username" placeholder="username"> -->
        <a class="mt-2 inline-block font-semibold text-zinc-500" href="#">Forgot password?</a>
        <input class=" block mt-2 w-full px-3 py-3 font-semibold text-white rounded-full bg-red-600" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-2/2 text-center mx-auto">
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <a class="inline-block mt-5 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Not in Pinterest yet? Sign up</a>
        

      </form>

       
    </div>
  </div>
