<% include ./partials/header.ejs %>
<div class=" w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Edit Profile</h1>
    <hr class="opacity-10 mt-3">
    <form action="/update" method="post">
       
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-20 rounded-md" type="text" placeholder="username" name="username" value="<%= user.username %>">
        <input class="text-black block w-1/3 px-3 py-2  border-2 mt-8 rounded-md" type="text" placeholder="name" name="name" value="<%= user.name %>"></input>
        <input class="block w-1/3 px-3 py-2 bg-red-700 mt-8 rounded-md" type="submit" value="Update">
    </form>
</div>
<% include ./partials/footer.ejs %>