<% include ./partials/header.ejs %>
  <div class=" w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form class="" action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 mt-20 m-auto" type="file" placeholder="File" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md m-auto" type="text" placeholder="Title" name="title">
        <textarea class="text-black block w-1/3 px-3 py-2 h-40 border-2 mt-2 rounded-md m-auto" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 bg-red-700 mt-2 rounded-md m-auto" type="submit" value="Create Post">
    </form>
  </div>

<% include ./partials/footer.ejs %>