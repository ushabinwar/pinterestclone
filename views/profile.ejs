<% include ./partials/header.ejs %>

   <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image" >
    </form>
    <div class="profdets flex flex-col bg-[] items-center mt-20" >
        <div class=" relative">
            <span id="uploadicon" class="w-9 h-9 rounded-full bg-zinc-200 absolute bottom-0 right-0 flex justify-center items-center">
                <i class="text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-3"><%= user.name%></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/edit" class=" mt-4 px-7 py-2 rounded-full text-xs font-semibold bg-zinc-500">Edit</a>
        <a href="/add"><button class="px-10 py-3 bg-red-600 rounded-lg font-semibold text-xs mt-3">Add New Post</button></a>
    </div>
    <div class="cards flex flex-wrap gap-10  mt-10 px-20">
        <div class="card">
            <div class="h-44 w-60 rounded-lg bg-zinc-800 overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <a href="/show/posts" class=" inline-block text-xl font-semibold mt-2">Your Uploded Pins</a>
            <h5 class="text-xs font-semibold opacity-80"><%= user.posts.length %> Pins</h5>

        </div>
        
    </div>
    
   </div>
